{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "dist-electron",
        "rootDir": "electron",
        "sourceMap": false,
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "electron/**/*"
    ]
}